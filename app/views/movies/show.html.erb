<%= stylesheet_link_tag 'show', :media => "all" %>

<h1><%= @movie_info['title'] %></h1>

<p><strong>上映日：</strong><%= @movie_info['release_date'] %></p>

<p><strong>上映時間：</strong><%= @movie_info['runtime'] %>分</p>

<p>
    <strong>ジャンル：</strong>
    <% @movie_info['genres'].each do |genre| %>
        <% if genre == @movie_info['genres'].last %>
            <span><%= genre['name'] %></span>
        <% else %>
            <span><%= genre['name'] %>、</span>
        <% end %>
    <% end %>
</p>

<p><strong>ストーリ：</strong><%= @movie_info['overview'] %></p>

<%= image_tag("https://image.tmdb.org/t/p/original#{@movie_info['poster_path']}", :alt => 'poster') %>

<form method="post" action="/movies/new">
<input name="name" placeholder="ニックネーム">

<input name="hash" placeholder="#◯◯な映画">

<%= button_to "次へ", movies_new_path, { method: :get, params: {image: "https://image.tmdb.org/t/p/original#{@movie_info['poster_path']}"}} %>
</form>

<%= link_to "戻る", movies_search_path %>
